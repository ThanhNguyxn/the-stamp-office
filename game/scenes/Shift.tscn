[sub_resource type="Shader" id="Shader_scanline"]
code = "shader_type canvas_item;

uniform float scanline_intensity : hint_range(0.0, 1.0) = 0.08;
uniform float vignette_intensity : hint_range(0.0, 1.0) = 0.15;
uniform float glitch_intensity : hint_range(0.0, 1.0) = 0.0;

void fragment() {
    vec2 uv = SCREEN_UV;
    
    // Scanlines (subtle horizontal lines)
    float scanline = sin(uv.y * 800.0) * 0.5 + 0.5;
    scanline = mix(1.0, scanline, scanline_intensity);
    
    // Vignette (darken edges)
    vec2 center = uv - 0.5;
    float vignette = 1.0 - dot(center, center) * vignette_intensity * 2.0;
    vignette = clamp(vignette, 0.0, 1.0);
    
    // Glitch offset (when triggered)
    float glitch_offset = sin(TIME * 50.0 + uv.y * 20.0) * glitch_intensity * 0.01;
    
    // Combine effects
    float alpha = (1.0 - scanline * 0.15) * (1.0 - vignette * 0.1);
    alpha = clamp(alpha, 0.0, 0.3) * (scanline_intensity + vignette_intensity + glitch_intensity);
    
    COLOR = vec4(0.0, 0.0, 0.0, alpha);
}"

